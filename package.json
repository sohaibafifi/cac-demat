{
  "name": "cac-demat-monorepo",
  "private": true,
  "version": "0.1.6",
  "description": "Scripts racine pour orchestrer les releases NodeJS & NativePHP",
  "scripts": {
    "version:patch": "node scripts/bump-version.cjs patch",
    "version:minor": "node scripts/bump-version.cjs minor",
    "version:major": "node scripts/bump-version.cjs major",
    "build": "npm run build:node && npm run build:native",
    "build:node": "npm --prefix nodejs run electron:package",
    "build:native": "node nativephp/scripts/native-release.cjs --build-only",
    "release": "npm run release:node && npm --prefix nativephp run release -- --skip-tag",
    "release:node": "npm --prefix nodejs run release",
    "release:native": "npm --prefix nativephp run release",
    "release:patch": "npm run version:patch",
    "release:minor": "npm run version:minor",
    "release:major": "npm run version:major",
    "publish": "npm run publish:node && npm run publish:native",
    "publish:node": "npm --prefix nodejs run publish",
    "publish:native": "npm --prefix nativephp run publish"
  }
}
