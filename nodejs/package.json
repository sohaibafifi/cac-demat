{
  "name": "cac-demat-node",
  "version": "0.2.3",
  "private": true,
  "type": "module",
  "description": "CAC Demat - Application desktop pour préparer des packages PDF pour les rapporteurs et les membres.",
  "homepage": "https://www.univ-artois.fr",
  "author": {
    "name": "Université d'Artois",
    "email": "dsi@univ-artois.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/univ-artois/cac-demat"
  },
  "main": "main.cjs",
  "scripts": {
    "build": "node scripts/clean-dist.cjs && tsc && node scripts/copy-electron-assets.cjs && node scripts/optimize-size.cjs",
    "build:watch": "tsc --watch",
    "lint": "eslint .",
    "dev": "npm run electron",
    "electron": "npm run build && electron .",
    "electron:package": "npm run build -- -mwl && electron-builder -mwl",
    "electron:package:mac": "npm run build -- --mac && electron-builder --mac",
    "electron:package:win": "npm run build -- --win && electron-builder --win",
    "electron:package:linux": "npm run build -- --linux && electron-builder --linux",
    "publish": "electron-forge publish",
    "prune": "npm prune --production",
    "optimize": "node scripts/optimize-size.cjs",
    "version:patch": "node ../scripts/bump-version.cjs patch",
    "version:minor": "node ../scripts/bump-version.cjs minor",
    "version:major": "node ../scripts/bump-version.cjs major",
    "release": "node scripts/release.cjs",
    "release:patch": "npm run version:patch && npm run release",
    "release:minor": "npm run version:minor && npm run release",
    "release:major": "npm run version:major && npm run release"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-dmg": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron/packager": "^19.0.1",
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^20.12.7",
    "electron": "^38.4.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "fr.univ-artois.cac-demat",
    "productName": "cac-demat-node",
    "copyright": "Copyright © 2025 Université d'Artois",
    "files": [
      "dist/**/*",
      "main.cjs",
      "package.json",
      "!node_modules/**/*",
      "!data/**",
      "!**/__tests__/**",
      "!**/*.test.*",
      "!**/*.map",
      "!dist/**/*.map",
      "!commands/lib/**/*.a"
    ],
    "asarUnpack": [
      "dist/resources/commands/**"
    ],
    "extraResources": [
      {
        "from": "dist/resources/commands",
        "to": "resources/commands"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Université d'Artois"
    },
    "afterPack": "./scripts/after-pack.cjs"
  }
}
